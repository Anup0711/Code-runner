      <iframe id="preview"></iframe>
    </div>
  </div>

  <script>
    // Tab switching
    document.querySelectorAll('.tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelector('.tab.active').classList.remove('active');
        tab.classList.add('active');
        ['html','css','js'].forEach(lang => {
          document.getElementById(lang).style.display = (lang === tab.dataset.lang ? 'block' : 'none');
        });
      });
    });

    // Run code
    function run() {
      const h = document.getElementById('html').value;
      const s = '<style>' + document.getElementById('css').value + '</style>';
      const j = '<script>' + document.getElementById('js').value + '<\/script>';
      document.getElementById('preview').src = 'data:text/html;charset=utf-8,' +
        encodeURIComponent(h + s + j);
    }

    document.getElementById('run').addEventListener('click', run);
    window.addEventListener('load', run);
  </script>
