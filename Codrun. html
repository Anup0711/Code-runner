        <div class="tab" data-lang="css">CSS</div>
        <div class="tab" data-lang="js">JS</div>
      </div>
      <textarea id="html">&lt;!-- HTML here --&gt;</textarea>
      <textarea id="css" style="display:none">&lt;!-- CSS here --&gt;</textarea>
      <textarea id="js" style="display:none">// JS here</textarea>
    </div>

    <div class="preview-container">
      <!-- In-content ad slot -->
